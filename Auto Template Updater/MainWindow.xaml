<Window x:Class="Auto_Template_Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auto_Template_Updater"
        mc:Ignorable="d"
        Title="Bootle's Auto File Updater" Height="450" Width="800">
    <Grid x:Name="Uninstall_Button">
        <TextBlock Margin="0,10,10,0" Text="Bootle's Auto File Updater" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" HorizontalAlignment="Right" Width="780" TextAlignment="Right"/>
        <TextBlock Margin="0,79,10,0" Text="For Davy Jones' Locker" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" TextAlignment="Right" HorizontalAlignment="Right" Width="770"/>
        <Button x:Name="Download_Button" Content="Download New Files" VerticalAlignment="Top" FontSize="16" Click="Download_Button_Click" Margin="0,121,10,0" Height="36" HorizontalAlignment="Right" Width="270"/>
        <Button Content="Open Templates Folder" Margin="0,162,10,0" VerticalAlignment="Top" FontSize="16" Click="Button_Click" Height="36" Width="270" HorizontalAlignment="Right"/>
        <TextBlock Name="statusBox" Margin="0,203,10,0" TextWrapping="Wrap" FontSize="20" HorizontalAlignment="Right" Width="270" Height="80" VerticalAlignment="Top" TextAlignment="Center"/>

    </Grid>
</Window>
