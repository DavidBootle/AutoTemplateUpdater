<Window x:Class="Auto_Template_Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auto_Template_Updater"
        mc:Ignorable="d"
        Title="Bootle's Auto File Updater" Height="450" Width="800">
    <Grid x:Name="Uninstall_Button">
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Text="Bootle's Auto File Updater" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="48" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,79,0,0" Text="For Davy Jones' Locker" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="Download_Button" Content="Download New Files" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Click="Download_Button_Click"/>
        <Button Content="Uninstall Auto File Updater" HorizontalAlignment="Center" Margin="0,378,0,0" VerticalAlignment="Top"/>
        <Button Content="Open Templates Folder" HorizontalAlignment="Center" Margin="0,235,0,0" VerticalAlignment="Top" FontSize="16" Click="Button_Click"/>

    </Grid>
</Window>
